---
import Layout from '../../layouts/Layout.astro';
import { getPosts } from '../../lib/content';

const allPosts = await getPosts();
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="All Posts | Josh Giles">
  <div class="animate-fade-in">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      <span class="bg-gradient-to-r from-primary-700 via-primary-500 to-primary-300 bg-clip-text text-transparent">
        All Posts
      </span>
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mb-12">
      {posts.length} {posts.length === 1 ? 'post' : 'posts'} published
    </p>
    
    <div class="space-y-8">
      {posts.map((post, index) => (
        <article 
          class="flex flex-col sm:flex-row gap-4 sm:gap-8 items-start bg-white dark:bg-dark-800/40 backdrop-blur-sm border border-gray-200 dark:border-gray-800/50 rounded-xl p-6 hover:border-primary-600 dark:hover:border-primary-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary-600/20 dark:hover:shadow-primary-700/10 group"
          style={`animation: slideUp 0.6s ease-out ${index * 100}ms backwards`}
        >
          <time 
            datetime={post.data.date.toISOString()} 
            class="text-sm text-gray-600 dark:text-gray-400 sm:w-32 flex-shrink-0 font-medium"
          >
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
            })}
          </time>
          
          <div class="flex-1">
            <h2 class="text-xl md:text-2xl font-semibold mb-3">
              <a 
                href={`/posts/${post.slug}`} 
                class="hover:text-primary-700 dark:hover:text-primary-400 transition-colors duration-300 group-hover:text-primary-700 dark:group-hover:text-primary-400"
              >
                {post.data.title}
              </a>
            </h2>
            
            <p class="text-gray-700 dark:text-gray-400 mb-4 leading-relaxed">
              {post.data.description}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="text-xs bg-primary-100 dark:bg-primary-700/10 text-primary-800 dark:text-primary-400 px-3 py-1.5 rounded-full border border-primary-200 dark:border-primary-700/20">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Read more arrow -->
          <div class="sm:flex items-center text-primary-700 dark:text-primary-400 opacity-0 group-hover:opacity-100 transition-all duration-300 hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
