---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import ImageUpload from '../../components/ImageUpload.astro';
import * as fs from 'node:fs/promises';
import * as path from 'node:path';

let error = '';
let success = false;

if (Astro.request.method === 'POST') {
    try {
        const formData = await Astro.request.formData();
        const title = formData.get('title')?.toString() || '';
        const description = formData.get('description')?.toString() || '';
        const tags = formData.get('tags')?.toString() || '';
        const content = formData.get('content')?.toString() || '';
        const heroImage = formData.get('heroImage')?.toString() || '';

        // Generate slug from title
        const slug = title
            .toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/(^-|-$)/g, '');

        // Format date
        const date = new Date().toISOString().split('T')[0];

        // Format tags array
        const tagsArray = tags
            .split(',')
            .map(t => t.trim())
            .filter(t => t.length > 0);

        const draft = formData.get('draft') === 'on';

        // Create frontmatter with optional image
        let frontmatter = `---
title: "${title.replace(/"/g, '\\"')}"
description: "${description.replace(/"/g, '\\"')}"
date: ${date}
tags: [${tagsArray.map(t => `"${t}"`).join(', ')}]
draft: ${draft}`;

        if (heroImage) {
            frontmatter += `\nimage: "${heroImage}"`;
        }

        frontmatter += `\n---

${content}`;

        // Write file
        const filePath = path.join(process.cwd(), 'src', 'content', 'posts', `${slug}.md`);
        await fs.writeFile(filePath, frontmatter, 'utf-8');
        
        return Astro.redirect('/admin?created=' + slug);
    } catch (e) {
        error = e instanceof Error ? e.message : 'Failed to create post';
    }
}
---

<Layout title="New Post - Admin">
    <div class="mb-8">
        <a href="/admin" class="text-primary-600 dark:text-primary-400 hover:underline text-sm">
            &larr; Back to Dashboard
        </a>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-4">
            Create New Post
        </h1>
    </div>

    {error && (
        <div class="mb-6 p-4 bg-red-100 dark:bg-red-900/30 border border-red-300 dark:border-red-700 rounded-lg text-red-700 dark:text-red-300 text-sm">
            {error}
        </div>
    )}

    <form method="POST" class="space-y-6">
        <div class="bg-white dark:bg-dark-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 space-y-6">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Title
                </label>
                <input
                    type="text"
                    id="title"
                    name="title"
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                    placeholder="My Awesome Post"
                />
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Description
                </label>
                <input
                    type="text"
                    id="description"
                    name="description"
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                    placeholder="A brief description of your post"
                />
            </div>

            <div>
                <label for="tags" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Tags (comma-separated)
                </label>
                <input
                    type="text"
                    id="tags"
                    name="tags"
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                    placeholder="power platform, canvas apps, tutorials"
                />
            </div>

            <!-- Hero Image Field -->
            <div>
                <label for="heroImage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Hero Image URL
                </label>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">
                    This image will be displayed at the top of your post and as a preview thumbnail
                </p>
                <div class="flex gap-2">
                    <input
                        type="url"
                        id="heroImage"
                        name="heroImage"
                        class="flex-1 px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                        placeholder="https://res.cloudinary.com/..."
                    />
                </div>
                <div id="heroPreview" class="mt-3 hidden">
                    <img id="heroPreviewImg" src="" alt="Hero preview" class="max-h-40 rounded-lg border border-gray-200 dark:border-gray-700" />
                </div>
            </div>

            <div>
                <label class="flex items-center gap-3 p-4 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-800/50 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                    <input
                        type="checkbox"
                        id="draft"
                        name="draft"
                        class="w-5 h-5 rounded border-gray-300 dark:border-gray-600 text-primary-600 focus:ring-primary-500"
                    />
                    <div>
                        <span class="block text-sm font-medium text-gray-900 dark:text-gray-100">Save as Draft</span>
                        <span class="block text-xs text-gray-500 dark:text-gray-400">Drafts are only visible to admins</span>
                    </div>
                </label>
            </div>

            <!-- Image Upload Section -->
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Upload Images
                </label>
                <p class="text-xs text-gray-500 dark:text-gray-400 mb-3">
                    Upload images and copy the markdown or URL to use
                </p>
                <ImageUpload />
            </div>

            <!-- Content with Preview Toggle -->
            <div>
                <div class="flex items-center justify-between mb-2">
                    <label for="content" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Content (Markdown)
                    </label>
                    <button
                        type="button"
                        id="previewToggle"
                        class="px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 border border-primary-300 dark:border-primary-700 rounded-lg hover:bg-primary-50 dark:hover:bg-primary-900/20 transition-colors"
                    >
                        Preview
                    </button>
                </div>
                <div id="editorContainer">
                    <textarea
                        id="content"
                        name="content"
                        required
                        rows="20"
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 font-mono text-sm"
                        placeholder="Write your post content here in Markdown..."
                    ></textarea>
                </div>
                <div id="previewContainer" class="hidden">
                    <div 
                        id="previewContent" 
                        class="w-full min-h-[500px] px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-dark-700 text-gray-900 dark:text-gray-100 prose dark:prose-invert max-w-none overflow-auto"
                    ></div>
                </div>
            </div>
        </div>

        <div class="flex gap-4">
            <button
                type="submit"
                class="px-8 py-3 bg-gradient-primary text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-primary-700/30 transition-all duration-300"
            >
                Create Post
            </button>
            <a
                href="/admin"
                class="px-8 py-3 bg-gray-200 dark:bg-dark-700 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-300 dark:hover:bg-dark-600 transition-all duration-300"
            >
                Cancel
            </a>
        </div>
    </form>
</Layout>

<script>
    // Hero image preview
    const heroInput = document.getElementById('heroImage') as HTMLInputElement;
    const heroPreview = document.getElementById('heroPreview');
    const heroPreviewImg = document.getElementById('heroPreviewImg') as HTMLImageElement;

    heroInput?.addEventListener('input', () => {
        const url = heroInput.value.trim();
        if (url && heroPreview && heroPreviewImg) {
            heroPreviewImg.src = url;
            heroPreview.classList.remove('hidden');
            heroPreviewImg.onerror = () => heroPreview.classList.add('hidden');
        } else if (heroPreview) {
            heroPreview.classList.add('hidden');
        }
    });

    // Markdown preview toggle
    const previewToggle = document.getElementById('previewToggle');
    const editorContainer = document.getElementById('editorContainer');
    const previewContainer = document.getElementById('previewContainer');
    const previewContent = document.getElementById('previewContent');
    const contentTextarea = document.getElementById('content') as HTMLTextAreaElement;

    let isPreview = false;

    previewToggle?.addEventListener('click', async () => {
        isPreview = !isPreview;
        
        if (isPreview && previewToggle && editorContainer && previewContainer && previewContent && contentTextarea) {
            // Load marked.js from CDN if not already loaded
            if (!(window as any).marked) {
                const script = document.createElement('script');
                script.src = 'https://cdn.jsdelivr.net/npm/marked/marked.min.js';
                document.head.appendChild(script);
                await new Promise(resolve => script.onload = resolve);
            }
            
            // Render markdown
            previewContent.innerHTML = (window as any).marked.parse(contentTextarea.value);
            
            editorContainer.classList.add('hidden');
            previewContainer.classList.remove('hidden');
            previewToggle.textContent = 'Edit';
        } else if (previewToggle && editorContainer && previewContainer) {
            editorContainer.classList.remove('hidden');
            previewContainer.classList.add('hidden');
            previewToggle.textContent = 'Preview';
        }
    });
</script>
