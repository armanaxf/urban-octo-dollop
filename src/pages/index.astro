---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<Layout title="Josh Giles">
  <!-- Hero Section with Gradient -->
  <section class="mb-16 animate-fade-in">
    <div class="relative">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
        <span class="bg-gradient-to-r from-primary-700 via-primary-500 to-primary-300 bg-clip-text text-transparent animate-gradient-shift bg-[length:200%_auto]">
          Josh Giles
        </span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 leading-relaxed max-w-2xl">
        A collection of my thoughts and ramblings on Microsoft's 
        <span class="text-primary-400 font-semibold">Power Platform</span>
      </p>
      
      <!-- Decorative gradient line -->
      <div class="mt-8 h-1 w-32 bg-gradient-accent rounded-full"></div>
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="animate-slide-up">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100 flex items-center gap-3">
      <span class="w-2 h-8 bg-gradient-accent rounded-full"></span>
      Recent Posts
    </h2>
    
    <div class="space-y-6">
      {posts.map((post, index) => (
        <article 
          class="group relative bg-white dark:bg-dark-800/40 backdrop-blur-sm border border-gray-200 dark:border-gray-800/50 rounded-xl p-6 transition-all duration-300 hover:border-primary-600 dark:hover:border-primary-700/50 hover:shadow-xl hover:shadow-primary-600/20 dark:hover:shadow-primary-700/10 hover:-translate-y-1"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Gradient border on hover -->
          <div class="absolute inset-0 rounded-xl bg-gradient-accent opacity-0 group-hover:opacity-10 transition-opacity duration-300 -z-10"></div>
          
          <a href={`/posts/${post.slug}`} class="block">
            <h3 class="text-xl md:text-2xl font-semibold mb-3 text-gray-900 dark:text-gray-100 group-hover:text-primary-700 dark:group-hover:text-primary-400 transition-colors duration-300">
              {post.data.title}
            </h3>
            
            <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-3">
              <time datetime={post.data.date.toISOString()} class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex gap-2">
                  {post.data.tags.slice(0, 2).map(tag => (
                    <span class="px-2 py-1 text-xs rounded-full bg-primary-100 dark:bg-primary-700/10 text-primary-800 dark:text-primary-400 border border-primary-200 dark:border-primary-700/20">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
            
            <p class="text-gray-700 dark:text-gray-400 line-clamp-2 leading-relaxed">
              {post.data.description}
            </p>
            
            <!-- Read more arrow -->
            <div class="mt-4 flex items-center gap-2 text-primary-700 dark:text-primary-400 font-medium opacity-0 group-hover:opacity-100 transition-all duration-300 transform group-hover:translate-x-2">
              <span>Read more</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        </article>
      ))}
    </div>
    
    <!-- View All Posts Link -->
    <div class="mt-10 text-center">
      <a 
        href="/posts" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-primary text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-primary-700/30 transition-all duration-300 hover:scale-105"
      >
        View all posts
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</Layout>

<style>
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  .animate-gradient-shift {
    animation: gradient-shift 3s ease infinite;
  }
</style>
