<section class="relative w-full min-h-[500px] flex items-center justify-center overflow-hidden bg-gray-50 dark:bg-dark-900 transition-colors duration-300">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <div class="absolute top-0 -left-4 w-96 h-96 bg-primary-400 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob dark:mix-blend-screen dark:bg-primary-500/40"></div>
    <div class="absolute top-0 -right-4 w-96 h-96 bg-accent-light rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-2000 dark:mix-blend-screen dark:bg-accent-light/40"></div>
    <div class="absolute -bottom-32 left-20 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-4000 dark:mix-blend-screen dark:bg-primary-400/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight tracking-tight">
      <span class="bg-gradient-to-r from-primary-700 via-primary-500 to-primary-300 bg-clip-text text-transparent animate-gradient-shift bg-[length:200%_auto]">
        Josh Giles
      </span>
    </h1>
    
    <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 leading-relaxed max-w-2xl mx-auto mb-10">
      A collection of my thoughts and ramblings on Microsoft's 
      <span class="text-primary-600 dark:text-primary-400 font-bold relative inline-block">
        Power Platform
        <span class="absolute bottom-0 left-0 w-full h-1 bg-primary-400/50 rounded-full"></span>
      </span>
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="/posts" class="px-8 py-3 bg-primary-700 text-white rounded-full font-semibold hover:bg-primary-600 transition-all duration-300 shadow-lg hover:shadow-primary-700/30 hover:-translate-y-1">
        Read the Blog
      </a>
      <a href="/about" class="px-8 py-3 bg-white dark:bg-dark-800 text-gray-800 dark:text-gray-200 rounded-full font-semibold border border-gray-200 dark:border-gray-700 hover:border-primary-400 dark:hover:border-primary-600 transition-all duration-300 hover:-translate-y-1">
        About Me
      </a>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
